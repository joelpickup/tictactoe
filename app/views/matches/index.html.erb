<% if @matches.count + @unplayable_matches.count == 0 %>
<h1>You have no matches, challenge someone!</h1>
<% end %>

<% if @matches.count > 0 %>
<h1>Your Turn</h1>
<table>
  <tr>
    <th><h2>VS</h2></th>
    <th><h2></h2></th>
  </tr>
<% @matches.each do |match| %>
<tr>
  <% if match.player_x_id == current_user.id %>
    <td><%= User.find(match.player_o_id).nickname %></td>
    <% else %>
    <td><%= User.find(match.player_x_id).nickname %></td>
  <% end %>
  <td><%= link_to 'Show', match  %></td>
</tr>
<% end %>
</table>
<% end %>

<% if @unplayable_matches.count > 0 %>
<h1>Their turn</h1>
<table>
    <tr>
      <th><h2>VS</h2></th>
      <th><h2></h2></th>
    </tr>
  <% @unplayable_matches.each do |match| %>
  <tr>
    <% if match.player_x_id == current_user.id %>
      <td><%= User.find(match.player_o_id).nickname %></td>
      <% else %>
      <td><%= User.find(match.player_x_id).nickname %></td>
    <% end %>
    <td><%= link_to 'Show', match  %></td>
  </tr>
  <% end %>
</table>
<% end %>
